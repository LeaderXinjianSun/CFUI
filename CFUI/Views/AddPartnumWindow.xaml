<Window x:Class="CFUI.Views.AddPartnumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CFUI.Views"
        mc:Ignorable="d"
        Title="新料号" Height="100" Width="300" WindowStartupLocation ="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label VerticalAlignment="Center">料号:</Label>
            <TextBox Width="120" Text="{Binding NewPartnum}" VerticalAlignment="Center"></TextBox>
            <Button Height="30" Margin="10,0" Content="添加" Command="{Binding AddNewPartnumCommand}"></Button>
        </StackPanel>
    </Grid>
</Window>
